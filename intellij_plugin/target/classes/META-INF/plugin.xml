<idea-plugin>
    <id>com.aimentor.intellij</id>
    <name>AI Mentor Assistant</name>
    <version>1.0.0</version>
    <vendor email="support@aimentor.com" url="https://aimentor.com">AI Mentor</vendor>

    <description><![CDATA[
        AI-powered coding assistant that integrates with your meetings and workflow.
        
        Features:
        • Real-time meeting integration with Zoom, Teams, Google Meet
        • Automatic Jira task synchronization
        • AI-powered code suggestions and implementation
        • Meeting context awareness for coding sessions
        • Intelligent task management with memory system
        • GitHub integration for automated PRs and commits
        
        Transform your development workflow with AI-powered assistance that understands your meetings, tasks, and codebase.
    ]]></description>

    <change-notes><![CDATA[
        Version 1.0.0:
        • Initial release
        • Meeting integration support
        • Jira task management
        • AI code assistance
        • Memory-based context system
    ]]></change-notes>

    <!-- Product and plugin compatibility requirements -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends optional="true" config-file="python-plugin.xml">com.intellij.modules.python</depends>
    <depends optional="true" config-file="javascript-plugin.xml">JavaScript</depends>

    <!-- Extension points defined by the plugin -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow id="AI Mentor" secondary="true" icon="/icons/ai-mentor.png" anchor="right"
                    factoryClass="com.aimentor.intellij.ui.AIMentorToolWindowFactory"/>
        
        <!-- Actions -->
        <action id="AIMentor.AskQuestion" class="com.aimentor.intellij.actions.AskQuestionAction"
                text="Ask AI Mentor" description="Ask AI Mentor about your code or current task">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q"/>
        </action>
        
        <action id="AIMentor.AnalyzeCode" class="com.aimentor.intellij.actions.AnalyzeCodeAction"
                text="Analyze with AI Mentor" description="Analyze selected code with AI Mentor">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="AIMentor.AskQuestion"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt A"/>
        </action>
        
        <action id="AIMentor.GenerateCode" class="com.aimentor.intellij.actions.GenerateCodeAction"
                text="Generate Code for Task" description="Generate code based on current Jira task">
            <add-to-group group-id="GenerateGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>
        
        <action id="AIMentor.SyncJira" class="com.aimentor.intellij.actions.SyncJiraAction"
                text="Sync Jira Tasks" description="Synchronize Jira tasks with AI Mentor">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt J"/>
        </action>

        <!-- Completion Contributors -->
        <completion.contributor language="JAVA" implementationClass="com.aimentor.intellij.completion.AIMentorCompletionContributor"/>
        <completion.contributor language="Python" implementationClass="com.aimentor.intellij.completion.AIMentorCompletionContributor"/>
        <completion.contributor language="JavaScript" implementationClass="com.aimentor.intellij.completion.AIMentorCompletionContributor"/>

        <!-- Live Templates -->
        <defaultLiveTemplatesProvider implementation="com.aimentor.intellij.templates.AIMentorLiveTemplatesProvider"/>
        
        <!-- Intention Actions -->
        <intentionAction>
            <className>com.aimentor.intellij.intentions.ExplainCodeIntention</className>
            <category>AI Mentor</category>
        </intentionAction>
        
        <intentionAction>
            <className>com.aimentor.intellij.intentions.OptimizeCodeIntention</className>
            <category>AI Mentor</category>
        </intentionAction>

        <!-- Notification Groups -->
        <notificationGroup id="AI Mentor" displayType="BALLOON" key="notification.group.ai.mentor"/>

        <!-- Project Service -->
        <projectService serviceImplementation="com.aimentor.intellij.services.AIMentorProjectService"/>
        
        <!-- Application Service -->
        <applicationService serviceImplementation="com.aimentor.intellij.services.AIMentorApplicationService"/>

        <!-- Startup Activity -->
        <postStartupActivity implementation="com.aimentor.intellij.startup.AIMentorStartupActivity"/>

        <!-- Error Reporting -->
        <errorHandler implementation="com.aimentor.intellij.error.AIMentorErrorReporter"/>
    </extensions>

    <!-- Actions -->
    <actions>
        <group id="AIMentorActionGroup" text="AI Mentor" description="AI Mentor actions">
            <reference ref="AIMentor.AskQuestion"/>
            <reference ref="AIMentor.AnalyzeCode"/>
            <reference ref="AIMentor.GenerateCode"/>
            <separator/>
            <reference ref="AIMentor.SyncJira"/>
        </group>
        
        <!-- Add to main menu -->
        <group id="AIMentorMainMenu" text="AI Mentor" description="AI Mentor">
            <reference ref="AIMentorActionGroup"/>
            <add-to-group group-id="MainMenu" anchor="before" relative-to-action="HelpMenu"/>
        </group>
    </actions>

    <!-- Application components -->
    <application-components>
        <component>
            <implementation-class>com.aimentor.intellij.components.AIMentorComponent</implementation-class>
        </component>
    </application-components>

    <!-- Project components -->
    <project-components>
        <component>
            <implementation-class>com.aimentor.intellij.components.AIMentorProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>
