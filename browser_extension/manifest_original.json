{
  "manifest_version": 3,
  "name": "AI Mentor Assistant",
  "version": "1.8.0",
  "description": "Intelligent meeting recording and analysis for developers",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "alarms",
    "offscreen",
    "tabCapture",
    "desktopCapture"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://teams.microsoft.com/*",
    "https://*.zoom.us/*",
    "https://zoom.us/*",
    "http://localhost:8080/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://*.zoom.us/*",
        "https://zoom.us/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Meeting Mentor"
  },
  "web_accessible_resources": [{
    "resources": ["extension_bridge.js", "inject.js", "offscreen.js", "offscreen.html", "overlay_client.js"],
    "matches": ["<all_urls>"]
  }]
}
