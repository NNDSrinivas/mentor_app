{
  "manifest_version": 3,
  "name": "AI Interview Assistant - STEALTH MODE",
  "version": "1.3.0",
  "description": "Private AI interview assistant with stealth mode - visible to you but hidden from screen sharing",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:8084/*",
    "http://localhost:8080/*",
    "https://meet.google.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["https://meet.google.com/*"]
    }
  ],
  
  "action": {
    "default_title": "AI Interview Assistant - STEALTH MODE"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}
