{
  "manifest_version": 3,
  "name": "AI SDLC Assistant - Advanced",
  "version": "2.0.0",
  "description": "Advanced AI assistant for complete Software Development Life Cycle - Inspired by Cluely & Firefly",
  "minimum_chrome_version": "109",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "clipboardWrite",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://*.jira.com/*",
    "https://github.com/*",
    "https://linear.app/*",
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://*.teams.microsoft.com/*",
    "https://slack.com/*",
    "https://*.asana.com/*",
    "http://localhost:*/*",
    "https://your-domain.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://*.teams.microsoft.com/*"
      ],
      "js": ["content_advanced.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://*.jira.com/*",
        "https://linear.app/*",
        "https://*.asana.com/*"
      ],
      "js": ["content_advanced.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": ["content_advanced.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://slack.com/*"
      ],
      "js": ["content_advanced.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.png", "*.svg"],
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://*.teams.microsoft.com/*",
        "https://*.atlassian.net/*",
        "https://*.jira.com/*",
        "https://github.com/*",
        "https://linear.app/*",
        "https://slack.com/*",
        "https://*.asana.com/*"
      ]
    }
  ],

  "action": {
    "default_title": "AI SDLC Assistant - Advanced",
    "default_popup": "popup_advanced.html"
  },

  "background": {
    "service_worker": "background_advanced.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "commands": {
    "toggle-assistant": {
      "suggested_key": {
        "default": "Ctrl+Alt+A",
        "mac": "Command+Alt+A"
      },
      "description": "Toggle AI Assistant"
    },
    "toggle-stealth": {
      "suggested_key": {
        "default": "Ctrl+Alt+S",
        "mac": "Command+Alt+S"
      },
      "description": "Toggle Stealth Mode"
    },
    "toggle-listening": {
      "suggested_key": {
        "default": "Ctrl+Alt+L",
        "mac": "Command+Alt+L"
      },
      "description": "Toggle Voice Listening"
    },
    "create-task": {
      "suggested_key": {
        "default": "Ctrl+Alt+T",
        "mac": "Command+Alt+T"
      },
      "description": "Quick Create Task"
    },
    "generate-code": {
      "suggested_key": {
        "default": "Ctrl+Alt+C",
        "mac": "Command+Alt+C"
      },
      "description": "Generate Code"
    }
  },

  "options_page": "options.html",

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
