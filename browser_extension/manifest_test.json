{
  "manifest_version": 3,
  "name": "AI Mentor Assistant (TEST MODE)",
  "version": "1.8.1",
  "description": "Test version with always visible overlay",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://teams.microsoft.com/*",
    "https://*.zoom.us/*",
    "https://zoom.us/*",
    "http://localhost:8080/*",
    "http://localhost:8084/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://teams.microsoft.com/*",
        "https://*.zoom.us/*",
        "https://zoom.us/*"
      ],
      "js": ["content_test.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Meeting Mentor (Test)"
  }
}
