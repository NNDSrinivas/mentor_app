# Production Environment Variables Template
# Copy this to .env in production and fill in actual values

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret for authentication (REQUIRED - change this!)
JWT_SECRET=your_super_secret_jwt_key_change_this

# Database path (optional, defaults to production_mentor.db)
DATABASE_PATH=production_mentor.db

# Flask environment
FLASK_ENV=production

# Port (optional, defaults to 8084)
PORT=8084

# Optional: Database URL for PostgreSQL (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# Real-time Service Toggles
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_MEMORY_SERVICE=false
