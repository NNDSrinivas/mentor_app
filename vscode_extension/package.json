{
  "name": "ai-mentor-assistant",
  "displayName": "AI Mentor Assistant",
  "description": "Intelligent coding assistant that learns from your workflow",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "mentor",
    "assistant",
    "coding",
    "analysis"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiMentor.startSession",
        "title": "Start AI Mentor Session",
        "category": "AI Mentor"
      },
      {
        "command": "aiMentor.stopSession",
        "title": "Stop AI Mentor Session",
        "category": "AI Mentor"
      },
      {
        "command": "aiMentor.askQuestion",
        "title": "Ask AI Mentor",
        "category": "AI Mentor"
      },
      {
        "command": "aiMentor.showInsights",
        "title": "Show Coding Insights",
        "category": "AI Mentor"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aiMentorInsights",
          "name": "AI Mentor Insights",
          "when": "aiMentor.active",
          "icon": "resources/robot.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiMentor",
          "title": "AI Mentor",
          "icon": "resources/robot.svg"
        }
      ]
    },
    "configuration": {
      "title": "AI Mentor Assistant",
      "properties": {
        "aiMentor.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start AI Mentor when VS Code opens"
        },
        "aiMentor.recordingEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic recording of coding sessions"
        },
        "aiMentor.languages": {
          "type": "array",
          "default": [
            "english",
            "hindi",
            "telugu"
          ],
          "description": "Preferred languages for AI responses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.102.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
