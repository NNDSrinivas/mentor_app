# =================================================================
# AI MENTOR ASSISTANT - ENVIRONMENT CONFIGURATION TEMPLATE
# =================================================================
# 
# IMPORTANT: 
# 1. Copy this file to .env: cp .env.template .env
# 2. Replace placeholder values with your actual API keys
# 3. Never commit .env file to version control
#
# =================================================================

# OpenAI API Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/account/api-keys
# Example: OPENAI_API_KEY=sk-proj-abc123...
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
WHISPER_MODEL=whisper-1

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
API_PORT=8084

# Security Configuration (REQUIRED for production)
# JWT secret key for session management - MUST be set for production backend
# Generate a strong secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your_jwt_secret_key_change_this_to_secure_random_string

# Audio Recording Settings
SAMPLE_RATE=44100
CHANNELS=1
CHUNK_SIZE=1024

# AWS Configuration (Optional)
AWS_REGION=us-east-1

# Advanced Features (Optional)
MEMORY_DB_PATH=./data/chroma_db
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
JIRA_WEBHOOK_SECRET=your_jira_webhook_secret_here
AUDIT_LOG_PATH=./logs/audit.log
RETENTION_RAW_VIDEO_DAYS=7
RETENTION_TRANSCRIPT_DAYS=30
RETENTION_VECTOR_DAYS=180
ENABLE_SPEAKER_DIARIZATION=false
ENABLE_MEMORY_SERVICE=false

# Context Window Configuration (Optional)
# Set to true for backward-compatible inclusive boundary (>=) in context window filtering
# Default: false (strict boundary > for precise time-based filtering)
CONTEXT_WINDOW_INCLUSIVE=false

# Screen Recording Settings  
SCREEN_FPS=10
SCREEN_QUALITY=80

# Knowledge Base Settings
CHROMA_PERSIST_DIR=./data/chroma_db
EMBEDDING_MODEL=text-embedding-ada-002

# File Storage Settings
RECORDINGS_DIR=./data/recordings
TEMP_DIR=/tmp/mentor_app
